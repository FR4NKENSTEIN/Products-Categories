
@model Product

<div class="row mt-5">
  <div class="col border-info border-right">
    <h2 class="mb-5 text-center">New Product</h2>
    <form asp-action="ProCreator" asp-controller="Products" method="post">
      <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" class="form-control" min="0">
        <span asp-validation-for="Price" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-success">Create</button>
    </form>
  </div>
  <div class="col text-center">
    <h2 class="mb-3">Existing Products</h2>
    @foreach (Product prod in @ViewBag.Items)
    {
      <a href="/products/@prod.ProductId"><h3>@prod.Name</h3></a>
    }
    <!--loop through all the Products with ViewBag-->
  </div>
</div>